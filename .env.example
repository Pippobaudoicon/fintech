# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/fintech_db"

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DATABASE=0
REDIS_KEY_PREFIX=fintech

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_TRANSACTIONS=300
CACHE_TTL_ANALYTICS=3600
CACHE_TTL_USER_PROFILE=1800
CACHE_TTL_ACCOUNT_SUMMARY=600

# Session Management
SESSION_TTL=604800
SESSION_CLEANUP_INTERVAL=3600

# Encryption
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# External APIs (placeholder for real implementations)
PAYMENT_PROVIDER_API_KEY=your-payment-provider-api-key
PAYMENT_PROVIDER_SECRET=your-payment-provider-secret
